---
import Link from '@components/atoms/Link.astro';

export type Props = {
  href: string;
  active?: boolean;
  label: string;
  class?: string;
}

const {
  href,
  active = false,
  label,
  class: className = '',
} = Astro.props;

const activeStyles = active
  ? 'underline decoration-2'
  : ' hover:decoration-gray-100';

const classes = `no-underline hover:underline transition transition-300 underline-offset-20 inline-flex items-center px-3 py-2  ${activeStyles} ${className}`;
---

<Link href={href} variant="nav" class={classes}>
	{label}
	<slot />
</Link>
