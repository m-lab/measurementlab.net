---
export interface Props {
  id: string;
  label: string;
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search' | 'textarea';
  name?: string;
  placeholder?: string;
  required?: boolean;
  error?: string;
  helpText?: string;
  class?: string;
  [key: string]: any;
}

const {
  id,
  label,
  type = 'text',
  name,
  placeholder,
  required = false,
  error,
  helpText,
  class: className = '',
  ...props
} = Astro.props;

const inputName = name || id;
const isTextarea = type === 'textarea';

const baseInputStyles = 'w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 transition-colors';
const inputStateStyles = error
  ? 'border-red-500 focus:border-red-500 focus:ring-red-500'
  : 'border-gray-300 focus:border-blue-500 focus:ring-blue-500';
const inputClasses = `${baseInputStyles} ${inputStateStyles} ${className}`;
---

<div class="w-full">
  <label for={id} class="block text-sm font-medium text-gray-700 mb-1">
    {label}
    {required && <span class="text-red-500 ml-1">*</span>}
  </label>

  {isTextarea ? (
    <textarea
      id={id}
      name={inputName}
      placeholder={placeholder}
      required={required}
      class={inputClasses}
      rows="4"
      {...props}
    />
  ) : (
    <input
      type={type}
      id={id}
      name={inputName}
      placeholder={placeholder}
      required={required}
      class={inputClasses}
      {...props}
    />
  )}

  {helpText && !error && (
    <p class="mt-1 text-sm text-gray-500">{helpText}</p>
  )}

  {error && (
    <p class="mt-1 text-sm text-red-600">{error}</p>
  )}
</div>
