---
export interface Props {
  containerized?: boolean;
  maxWidth?: 'full' | '7xl' | '6xl' | '5xl' | '4xl';
  padding?: boolean;
  class?: string;
}

const {
  containerized = true,
  maxWidth = '7xl',
  padding = true,
  class: className = '',
} = Astro.props;

const maxWidths = {
  full: 'max-w-full',
  '7xl': 'max-w-7xl',
  '6xl': 'max-w-6xl',
  '5xl': 'max-w-5xl',
  '4xl': 'max-w-4xl',
};

const containerClass = containerized ? `mx-auto ${maxWidths[maxWidth]}` : '';
const paddingClass = padding ? 'px-4 sm:px-6 lg:px-8 py-8' : '';
---

<main class={`${containerClass} ${paddingClass} ${className}`}>
	<slot />
</main>
