---
import highlight from '@assets/highlight.png'
import Hero from '@components/organisms/Hero.astro';
import SectionLayout from '@layouts/SectionLayout.astro';
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  subtitle?: string;
	class?: string;
	background?: {
		color: 'white' | 'gray' | 'primary-light' | 'primary-medium' | 'primary-dark';
		image?: ImageMetadata;
	};
}

const { title, subtitle, class: className = '', background } = Astro.props;
---

<Hero
	title={title}
	subtitle={subtitle}
	size="default"
	class={className}
	background={background}
>
	<slot />
</Hero>
