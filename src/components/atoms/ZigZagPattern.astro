---
export interface Props {
  color?: string;
  width?: number;
  height?: number;
  strokeWidth?: number;
  class?: string;
}

const {
  color = 'currentColor',
  width = 200,
  height = 20,
  strokeWidth = 3,
  class: className = ''
} = Astro.props;

// Create a repeating zig-zag pattern
const viewBoxWidth = 100;
const viewBoxHeight = 20;
---

<svg
  width={width}
  height={height}
  viewBox={`0 0 ${viewBoxWidth} ${viewBoxHeight}`}
  class={`zigzag-pattern ${className}`}
  xmlns="http://www.w3.org/2000/svg"
  preserveAspectRatio="none"
  aria-hidden="true"
>
  <path
    d="M0,10 L10,0 L20,10 L30,0 L40,10 L50,0 L60,10 L70,0 L80,10 L90,0 L100,10"
    stroke={color}
    stroke-width={strokeWidth}
    fill="none"
    vector-effect="non-scaling-stroke"
  />
</svg>

<style>
  .zigzag-pattern {
    display: block;
  }
</style>
