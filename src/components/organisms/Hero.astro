---
import HouseCard from '@components/molecules/HouseCard.astro';
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center' | 'right';
  size?: 'default' | 'large';
  background?: {
    color: 'white' | 'gray' | 'primary-light' | 'primary-mediumm' | 'primary-dark';
    image?: ImageMetadata;
  };
  class?: string;
}

const {
  title,
  subtitle,
  align = 'center',
  size = 'default',
  background = { color: 'white' },
  class: className = '',
} = Astro.props;

const alignments = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
};

const sizes = {
  default: 'py-8 md:py-12',
  large: 'py-24 md:py-32 lg:py-40',
};

// Map color values to Tailwind classes
const backgrounds = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  'primary-light': 'bg-primary-100',
  'primary-mediumm': 'bg-primary-700 text-white',
  'primary-dark': 'bg-primary-900 text-white',
};

const bgClass = backgrounds[background.color] || backgrounds.white;
const containerClasses = `${sizes[size]} ${bgClass} ${className}`;
---

<div id="heroContent" class={containerClasses}>
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<!-- <HouseCard title={title} description={subtitle} /> -->
		<div class={`mx-auto max-w-3xl ${alignments[align]}`}>
			<!-- Title -->
			<h1 class="mb-6">
				{title}
			</h1>

			<!-- Subtitle -->
			{subtitle && <p class="text-gray-600 mb-8">{subtitle}</p>}

			<!-- Actions Slot -->
			<!-- <div class="flex flex-wrap justify-center gap-4">
				<slot name="actions">
					<Button variant="primary" size="lg"> Get Started </Button>
				</slot>
			</div> -->

			<!-- Additional Content Slot -->
			<div class="mt-12">
				<slot />
			</div>
		</div>
	</div>
</div>

<style>
	#heroContent {
		mask: conic-gradient(from 45deg at 50px 50px, #000 75%, #0000 0) -50px;
	}
</style>
