---
import '@styles/global.css';
import Head from '@components/organisms/Head.astro';

export interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata;
  lang?: string;
  class?: string;
}

const {
  title,
  description,
  image,
  lang = 'en',
  class: className = '',
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : Astro.url;
---

<!doctype html>
<html lang={lang}>
	<head>
		<Head
			title={title}
			description={description}
			canonicalURL={canonicalURL}
			image={image}
		>
			<slot name="head" />
		</Head>
	</head>

	<body class={`bg-neutral-50 ${className}`}>
		<slot />
	</body>
</html>
